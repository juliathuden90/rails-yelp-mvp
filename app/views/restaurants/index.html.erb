<h1>All restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div class="card p-2 mb-2">
    <h2><%= restaurant.name%></h2>
    <p><%= restaurant.category %></p>
    <p><%= link_to "Go to restaurant", restaurant_path(restaurant), class: "btn btn-secondary" %></p>
  </div>
<% end %>

<hr>

<%= link_to "Add a new restaurant", new_restaurant_path(@restaurant), class: "btn btn-primary mb-2" %>
